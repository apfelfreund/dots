Menu DefaultRootMenu
{
        "Root Menu"            f.title
 
	"Firefox"		f.exec	"dbus-launch firefox &"
	"XTerm"			f.exec	"xterm &"
    	"Telegram"              f.exec  "telegram-desktop &"
    	"PcManFm"               f.exec  "pcmanfm &"
	separator               f.separator
 
    	"Internet"              f.menu internet
    	"Office"                f.menu office
    	"Multimedia"            f.menu multimedia
	"Programming"		f.menu programming
	"Emulation"		f.menu emulation
	"Utils"			f.menu utils
	"Games"			f.menu games
#	"Toys"			f.menu toys
	"Sessions"		f.menu sessions
        separator               f.separator
 
	"System"		f.menu	system
 
#######################################################################################################
        separator               f.separator
 
        "Refresh"               f.refresh
        "Toggle Behavior..."    f.set_behavior
         no-label               f.separator
        "Restart..."            f.restart
        "Quit..."               f.quit_mwm
}
 
Menu internet
{
	"Firefox"			f.exec	"firefox &"
	"Hexchat"			f.exec	"hexchat &"
    	"Telegram"          		f.exec  "telegram-desktop &"
    	"Uget"              		f.exec  "uget-gtk &"
}

Menu system
{
	"Wallpaper"	f.exec  "feh --bg-scale ~/.bg/bg1.jpg &"
	"Layout"	f.exec  "xterm -e setxkbmap "us,ru" "winkeys" "grp:alt_shift_toggle,grp_led:scroll" &"
	"Sound"		f.exec  "pulseaudio &"
}
  
Menu office
{
	"Ted"				f.exec	"Ted &"
	"OpenOffice Writer"		f.exec	"/usr/local/bin/openoffice-4.1.7-swriter &"
	"OpenOffice Calc"		f.exec	"/usr/local/bin/openoffice-4.1.7-scalc &"
	"Vim"			        f.exec	"xterm -e vim &"
}
 
